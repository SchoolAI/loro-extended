{
  "name": "@loro-extended/adapters",
  "version": "0.4.0",
  "description": "A collection of network and storage adapters for @loro-extended/repo",
  "author": "Duane Johnson",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./network/sse/client": {
      "import": "./dist/network/sse/client.js",
      "types": "./dist/network/sse/client.d.ts"
    },
    "./network/sse/server": {
      "import": "./dist/network/sse/server.js",
      "types": "./dist/network/sse/server.d.ts"
    },
    "./storage/indexed-db/client": {
      "import": "./dist/storage/indexed-db/client.js",
      "types": "./dist/storage/indexed-db/client.d.ts"
    },
    "./storage/level-db/server": {
      "import": "./dist/storage/level-db/server.js",
      "types": "./dist/storage/level-db/server.d.ts"
    },
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "tsup",
    "lint": "biome check --write .",
    "test": "vitest"
  },
  "dependencies": {
    "@loro-extended/change": "workspace:^",
    "@loro-extended/repo": "workspace:^",
    "classic-level": "^1.4.1",
    "emittery": "^1.2.0",
    "express": "^4.21.2",
    "idb": "^8.0.3",
    "loro-crdt": "^1.10.2",
    "reconnecting-eventsource": "^1.6.4",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/uuid": "11.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
