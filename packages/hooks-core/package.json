{
  "name": "@loro-extended/hooks-core",
  "version": "0.9.0",
  "description": "Core logic for Loro hooks, shared between React and Hono",
  "author": "Duane Johnson",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./src": "./src/index.ts",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "tsup",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@loro-extended/repo": "workspace:^",
    "loro-crdt": "^1.10.2"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependenciesMeta": {
    "@loro-extended/change": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@loro-extended/change": "workspace:^"
  }
}
