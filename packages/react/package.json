{
  "name": "@loro-extended/react",
  "version": "1.0.0",
  "description": "React hooks and utilities for Loro",
  "author": "Duane Johnson",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./src": "./src/index.ts",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "tsup",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@loro-extended/hooks-core": "workspace:^",
    "@loro-extended/repo": "workspace:^",
    "loro-crdt": "^1.10.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "19.1.8",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "@loro-extended/change": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@loro-extended/change": "workspace:^"
  }
}
