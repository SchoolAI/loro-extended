{
  "name": "@loro-extended/adapter-websocket",
  "version": "4.0.0",
  "description": "Native WebSocket network adapter for @loro-extended/repo - directly transmits ChannelMsg types without protocol translation",
  "author": "Duane Johnson",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./bun": {
      "import": "./dist/bun.js",
      "types": "./dist/bun.d.ts"
    },
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "tsup",
    "check": "biome check --write .",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@levischuck/tiny-cbor": "^0.3.2",
    "@loro-extended/repo": "workspace:^",
    "loro-crdt": "^1.10.3"
  },
  "devDependencies": {
    "@logtape/logtape": "^1.1.1",
    "@types/node": "^22.15.29",
    "@types/ws": "^8.5.13",
    "bun-types": "latest",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "ws": "^8.18.0"
  }
}
