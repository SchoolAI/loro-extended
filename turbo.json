{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "tsconfig.json",
        "tsup.config.ts",
        "package.json"
      ],
      "outputs": ["dist/**"]
    },
    "verify": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "*.config.ts",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [],
      "cache": false
    }
  }
}
